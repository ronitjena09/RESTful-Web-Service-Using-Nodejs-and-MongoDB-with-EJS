<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <title>List of Persons</title>
  <style>
    body {
      background-color: black;
      color: white;
    }
    .btn-custom {
      border-radius: 20px;
      background-color: blueviolet;
      color: white;
    }
    .btn-custom:hover {
      background-color: black;
      color: blueviolet;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1 class="mt-5">List of People</h1>
    <a href="/person/new" class="btn btn-custom mb-3">Add New Person</a>
    <table class="table table-bordered">
      <thead class="thead-dark">
        <tr>
          <th>Name</th>
          <th>Age</th>
          <th>Gender</th>
          <th>Mobile Number</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% persons.forEach(person => { %>
          <tr>
            <td><%= person.name %></td>
            <td><%= person.age %></td>
            <td><%= person.gender %></td>
            <td><%= person.mobileNumber %></td>
            <td>
              <a href="/person/edit/<%= person._id %>" class="btn btn-custom btn-sm">Edit</a>
              <a href="/person/delete/<%= person._id %>" class="btn btn-custom btn-sm">Delete</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js"
